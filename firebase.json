{
  "hosting": {
    "public": "public",
    "predeploy": "./predeploy.sh",
    "redirects": [
      {
        "source": "/app/**",
        "destination": "/app",
        "type": 301
      }
    ],
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ]
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "emulators": {
    "auth": {
      "port": 9099
    },
    "firestore": {
      "port": 8080,
      "host": "0.0.0.0"
    },
    "hosting": {
      "port": 6000
    },
    "ui": {
      "enabled": true
    }
  }
}